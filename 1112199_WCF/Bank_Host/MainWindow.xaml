<Window x:Class="Bank_Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MouseLeftButtonDown="Window_MouseLeftButtonDown" Closed="Window_Closed"
        Title="MainWindow" Height="350" Width="525" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF171C4D" Offset="0.924"/>
                <GradientStop Color="#FFBECDFD"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Service Banking" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="pack://application:,,,/#Agency FB"  FontSize="35"/>
        <Border Grid.Row="1" Margin="15,5,15,5" BorderBrush="Red" BorderThickness="3"/>
        <StackPanel VerticalAlignment="Top" Grid.Row="1" Margin="28,15,28,15" Name="MyStack" >

        </StackPanel>
        <Button Content="X" Background="Red" HorizontalAlignment="Left" Height="18" Margin="495,10,0,0" VerticalAlignment="Top" Width="20" Click="Button_Click"/>
    </Grid>
</Window>
